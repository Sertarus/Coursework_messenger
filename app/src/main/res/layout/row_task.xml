<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/white"
    app:contentPadding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorPrimaryDark">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/creatorTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Guarantor: qweqw@mail.ru"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:padding="10dp"/>

            <TextView
                android:id="@+id/receiverTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Performer: qwdasda@mail.ru"
                android:textColor="@color/white"
                android:padding="10dp"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/nameTV"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Task name: Make Programm"
                android:textColor="@color/white"
                android:padding="10dp"/>

            <TextView
                android:id="@+id/descriptionTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description:\nMake programm for our company to make messaging with tasks creation much easier"
                android:textColor="@color/white"
                android:padding="10dp"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/deadlineTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="23.05.20"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:padding="10dp"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>